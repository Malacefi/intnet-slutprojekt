<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/playlist_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/list_vertical_margin"/>

    <TextView
        android:id="@+id/nr_of_songs_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlist_name_label"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/list_vertical_margin"
        style="@style/SmallText"/>

    <TextView
        android:id="@+id/remove_playlist_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/playlist_name_label"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Ta bort"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:onClick="onClick"
        android:focusable="false"/>

</RelativeLayout>